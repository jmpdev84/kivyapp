    font_size: 16
    #color: 0,1,0,1
    #padding: 10
    #spacing: 10

ScreenManagement:
    PasswordScreen:
    ImageScreen:
    SuccessScreen:

<PasswordScreen>:
    name: 'passwordScrn'
    id: layoutId
    FloatLayout:
        TextInput:
            id: passwordField
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            size_hint: None, .08
            width: 400
            font_size: 32
            multiline: False
            password: True
            hint_text:"Enter the password"
            on_text_validate: layoutId.password_check(passwordField.text)

        Button:
            text: "Submit"
            pos_hint: {"center_x": .4, 'center_y': .4}
            on_press: layoutId.password_check(passwordField.text)
            size_hint: 0.2, 0.08

        Button:
            text: "Cancel"
            pos_hint: {"center_x": .6, 'center_y': .4}
            on_press: passwordField.text = ''
            size_hint: 0.2, 0.08

<ImageScreen>:
    name: 'imageScrn'
    id: imageScrnId
    GridLayout:
        rows: 3
        padding: 10
        spacing: 10

        BoxLayout:
            spacing: 10
            Button:
                text: '1'
                font_size: 30
                on_press: imageScrnId.image_check(self)
            Button:
                text: '2'
                font_size: 30
                on_press: imageScrnId.image_check(self)
            Button:
                text: '3'
                font_size: 30
                on_press: imageScrnId.image_check(self)
        BoxLayout:
            spacing: 10
            Button:
                text: '4'
                font_size: 30
                on_press: imageScrnId.image_check(self)
            Button:
                text: '5'
                font_size: 30
                on_press: imageScrnId.image_check(self)
            Button:
                text: '6'
                font_size: 30
                on_press: imageScrnId.image_check(self)
        BoxLayout:
            spacing: 10
            Button:
                text: '7'
                font_size: 30
                on_press: imageScrnId.image_check(self)
            Button:
                text: '8'
                font_size: 30
                on_press: imageScrnId.image_check(self)
            Button:
                text: '9'
                font_size: 30
                on_press: imageScrnId.image_check(self)

<SuccessScreen>:
    name: 'successScrn'
    id: successScreen
    FloatLayout:
        Button:
            on_press: app.root.get_screen('passwordScrn').ids.passwordField.text = ''
            on_release: app.root.current = 'passwordScrn'
            text: 'Success! Click to go back to the password screen'
            font_size: 30
            #pos_hint: {"x": 400, 'y':400}
