<Button>:
    font_size: 16
    #color: 0, 153, 204, 1
    #padding: 10
    #spacing: 10

<Label>:
    font_size: 30
    #color: 0, 153, 204, 1

ScreenManagement:
    PasswordScreen:
    ImageScreen:
    SuccessScreen:

<PasswordScreen>:
    name: 'passwordScrn'
    id: layoutId
    FloatLayout:
        TextInput:
            id: passwordField
            pos_hint:{"center_x": 0.5, "center_y": 0.5}
            size_hint: None, .08
            width: 400
            font_size: 32
            multiline: False
            password: True
            hint_text:"Enter the password"
            on_text_validate: layoutId.password_check(passwordField.text)

        Button:
            text: "Submit"
            pos_hint: {"center_x": .4, 'center_y': .4}
            on_press: layoutId.password_check(passwordField.text)
            size_hint: 0.2, 0.08

        Button:
            text: "Cancel"
            pos_hint: {"center_x": .6, 'center_y': .4}
            on_press: passwordField.text = ''
            size_hint: 0.2, 0.08

